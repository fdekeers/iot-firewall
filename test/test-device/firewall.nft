#!/usr/sbin/nft -f


table netdev test {

    # Chains
    chain http-xiaomi-cloud {
        
        # Chain configuration
        type filter hook ingress device enp0s8 priority 0; policy accept;

        # Rules
        # Policy get-ip-address
        meta l4proto udp udp sport { 68 } udp dport { 67 } ip saddr 0.0.0.0 log prefix "DHCP DISCOVER " group 2 accept

    }

}
