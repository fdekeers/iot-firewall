

/**
 * @brief Program entry point
 * 
 * @param argc number of command line arguments
 * @param argv list of command line arguments
 * @return exit code, 0 if success
 */
int main(int argc, char const *argv[]) {
    {% if multithread %}
    // Initialize state mutex
    int ret = pthread_mutex_init(&mutex, NULL);
    assert(ret == 0);

    // Create threads
    uint8_t i = 0;
    pthread_t threads[MAX_THREADS];

    {% for policy in policies %}
    // {{policy}}
    thread_arg_t thread_arg_{{policy}} = {
        .queue_id = NFQ_ID_BASE + i,
        .func = &callback_{{policy}},
        .arg = NULL
    };
    ret = pthread_create(&threads[i++], NULL, nfqueue_thread, (void *) &thread_arg_{{policy}});
    assert(ret == 0);
    
    {% endfor %}
    // Wait forever for threads
    for (i = 0; i < MAX_THREADS; i++) {
        pthread_join(threads[i], NULL);
    }

    // Destroy mutex
    pthread_mutex_destroy(&mutex);
    {% else %}
    // Bind to netfilter queue
    bind_queue(NFQ_ID_BASE + {{nfq_id_offset}}, &callback_{{policy}}, NULL);
    {% endif %}

    return 0;
}
